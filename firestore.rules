rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isOwner(userId) { return signedIn() && request.auth.uid == userId; }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /guardians/{guardianId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /incidents/{incidentId} {
      allow create: if signedIn();
      allow read, update, delete: if signedIn() && request.auth.uid == resource.data.userId;
    }

    match /emergencies/{sessionId} {
      allow create: if signedIn();
      allow read, update: if signedIn() && request.auth.uid == resource.data.userId;
      match /activity/{logId} {
        allow create: if signedIn();
        allow read: if signedIn() && request.auth.uid == resource.data.userId;
      }
    }
  }
}

